{% extends "base.html" %}

{% block contenido %}
		<div id='title'><h1>Secci√≥n usuarios</h1></div>
		
		{% if msg %}
			<div class="alert alert-warning">
				{{ msg }}
			</div>
		{% endif %}

		{% if agregar %}

		    <form method="post" action="./index.php?seccion=usuarios&amp;agregar=si">
		    	<input id="nick" type="text" name="nick" placeholder="Nick" >
		    	<input id="pass" type="password" name="pass" placeholder="P4ssw0rd">
		    	<input id="role" type="text" name="role" placeholder="rol" >
		    	<input id="agregar" name="submit" type="submit" value="AGREGAR">
	    	</form>

		{% else %}
			<div class="btn pull-right"'><a href="./index.php?seccion=usuarios&amp;agregar=si">Agregar Usuario</a></div>

		{% endif %}
		{% if users %}
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Nick</th>
						<th>Rol</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td> {{ user.nick}} </td>
							<td> {{ user.rol }} </td>
							<td><a class="btn btn-warning" href="./index.php?seccion=usuarios&amp;eliminar={{ user.id }}">Eliminar</a> </td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
{% endblock %}